---
import ButtonGoogle from "../components/button-google.astro";

if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    const name = data.get("name");
    const email = data.get("email");
    const password = data.get("password");

    if (!name || !email || !password) {
      throw new Error("All fields are required.");
    }

    console.log("Registering user:", { name, email });
    const result = await fetch("https://auth.guimox.dev/auth/signup", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ email, password }),
    });
    if (!result.ok) {
      const errorResponse = await result.text();
      console.error(`API Error (${result.status}):`, errorResponse);
      throw new Error(`Registration failed: ${errorResponse}`);
    }

    const response = await result.json();
    console.log("Success:", response);
  } catch (error) {
    if (error instanceof Error) {
      console.error(error.message);
    }
  }
}
